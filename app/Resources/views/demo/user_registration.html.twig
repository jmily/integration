{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html{
            background-color: #f9f9f9;
            font-family: 'Lato', sans-serif;
        }

        .demo-component-width {
            width: 300px;
        }

        .row .mdc-textfield {
            margin-top: 0;
        }

        ul {
            margin-top:0;
            padding:0;
            width: 240px;
            list-style:none;
        }

        ul > li {
            color: #d50000;
            font-size: .75rem;
        }

        .mdl-grid {
            margin-top:5%;
            width: 100%;
            max-width: 900px;
        }

        .submit {
            margin-top: 20px;
            width:300px;
        }

        input {
            width: 100%;
        }

        /* unvisited link */
        a:link {
            color: black;
        }

        /* visited link */
        a:visited {
            color: black;
        }

        /* mouse over link */
        a:hover {
            color: black;
        }

        /* selected link */
        a:active {
            color: black;
        }

        .twitter-feed {
            width: 300px;
            margin-top: 20px;
        }

        .mdc-textfield, .mdc-textfield-helptext {
          margin-bottom: 0;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="mdl-grid">
        <div class="row mdl-cell mdl-cell--5-col">
                {{ form_start(form) }}

                <div class="demo-component-width no-margin-top mdc-textfield mdc-textfield--upgraded" data-mdc-auto-init="MDCTextfield">
                    {{ form_widget(form.username, {'attr': {'class':'mdc-textfield__input'}}) }}
                    {{ form_label(form.username) }}
                </div>
                {{ form_errors(form.username) }}
                <p id="username-helptext" class="demo-component-width no-margin-top mdc-textfield-helptext mdc-textfield-helptext mdc-textfield-helptext--validation-msg" aria-hidden="true">
                    Username is required
                </p>

                <div class="demo-component-width no-margin-top mdc-textfield mdc-textfield--upgraded" data-mdc-auto-init="MDCTextfield">
                    {{ form_widget(form.email,  {'attr': {'class':'mdc-textfield__input'}})}}
                    {{ form_label(form.email)}}
                </div>
                {{ form_errors(form.email) }}
                <p id="email-helptext" class="demo-component-width no-margin-top mdc-textfield-helptext mdc-textfield-helptext mdc-textfield-helptext--validation-msg" aria-hidden="true">
                    Email is required
                </p>

                <button data-mdc-auto-init="MDCRipple" class="submit mdc-button mdc-button--raised mdc-button--primary">Save</button>
                {{ form_end(form) }}
        </div>

        <div class="twitter-feed mdl-cell mdl-cell--7-col mdl-cell--7-col-desktop" id="twitter-feed">
            <a class="twitter-timeline" data-width="400" data-height="400" href="https://twitter.com/escapestringbot">Tweets by escapestringbot</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}